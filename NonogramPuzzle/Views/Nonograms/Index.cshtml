@{
    ViewData["Title"] = "Nonogram Home Page";
}

@using NonogramPuzzle.Models;
<div class ="container">
  <h1>Nonogram</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Nonograms have been added yet!</h3>
  }

  <ul>
    @foreach(Nonogram nonogram in Model)
    {
      <li>@Html.ActionLink($"Nonogram Id: {nonogram.NonogramId}","Details", new { id = nonogram.NonogramId})</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new nonogram", "Create")</p>
</div>
